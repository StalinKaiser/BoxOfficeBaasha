<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageRelLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">
        <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/boxoffice"
        android:id="@+id/imageView" />
    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/UserNameEdit"
        android:layout_below="@+id/imageRelLayout"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/office"
        android:drawablePadding="10dp"
        android:textColorHint="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/white"
        android:padding="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PasswordEdit"
        android:layout_below="@+id/UserNameEdit"
        android:layout_margin="20dp"
        android:inputType="textPassword"
        android:hint="Password"
        android:textColorHint="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/white"
        android:padding="10dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login"
        android:layout_below="@+id/PasswordEdit"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:text="LOGIN"
        android:fontFamily="sans-serif"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register"
        android:layout_below="@+id/login"
        android:background="@android:color/transparent"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:text="Create Account"
        android:fontFamily="sans-serif"
        />
        <TextView
            android:text="Skip >>"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/register"
            android:layout_below="@+id/register"
            android:textColor="@android:color/white"
            android:id="@+id/skiplogin" />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/loadingPanelLogin"
        android:gravity="center">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:id="@+id/progressBar2" />


    </RelativeLayout>
